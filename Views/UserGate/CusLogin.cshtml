@model MovieTheater.Models.Customer

@{
    ViewBag.Title = "用户登陆";
}

<h2>用户登陆</h2>

<div class="container">
    <div class="form row">
        <form asp-action="CusLogin" class="form-horizontal col-sm-offset-3 col-md-offset-3" id="CusLogin" style="display:block;" method="post">
            <h3 class="form-title">登录账号</h3>
            <div class="col-md-9">
                <div class="form-group">
                    <i class="fa fa-user fa-lg" style="position:absolute;top:5px;left:5px;"></i>
                    <input class="form-control required" style="text-indent:20px" type="text" placeholder="用户名" name="uid" autofocus="autofocus" maxlength="20" />
                </div>
                <div class="form-group">
                    <i class="fa fa-lock fa-lg" style="position:absolute;top:5px;left:5px;"></i>
                    <input class="form-control required" style="text-indent:20px" type="password" placeholder="密码" name="pwd" maxlength="20" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-success pull-right" value="登录" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <script>$().ready(function() {
    $("#LogInForm").validate({
        rules: {
            uid: "required",
            pwd: {
                required: true,
                minlength: 4
            }
        }
    });
});</script>
}